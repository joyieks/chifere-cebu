  is_barter boolean DEFAULT false,
  barter_item_id text,
  created_at timestamp with time zone DEFAULT now(),
  product_type character varying NOT NULL DEFAULT 'product'::character varying CHECK (product_type::text = ANY (ARRAY['product'::character varying, 'preloved'::character varying, 'barter'::character varying]::text[])),
  product_specs jsonb DEFAULT '{}'::jsonb,
  product_price numeric NOT NULL DEFAULT 0,

CREATE TABLE public.order_notifications (
  id uuid NOT NULL DEFAULT gen_random_uuid(),
  order_id uuid NOT NULL,
  recipient_id uuid NOT NULL,
  notification_type character varying NOT NULL CHECK (notification_type::text = ANY (ARRAY['status_update'::character varying, 'payment_reminder'::character varying, 'order_confirmation'::character varying, 'order_cancelled'::character varying]::text[])),
  title character varying NOT NULL,
